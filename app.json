{
    "id": "eu.jeroensomhorst.tvgids",
    "name": {
        "en": "TVGids for Homey",
        "nl": "TVGids voor Homey"
    },
    "description": {
        "en": "Gives Homeh the possibility to react on tv programs",
        "nl": "Geeft homey de mogelijkheid om te reageren op starten van programma's"
    },
    "images": {
        "large": "./assets/images/large.png",
        "small": "./assets/images/small.png"
    }, 
    "version": "0.0.4",
    "compatibility": "1.x",
    "author": {
        "name": "Jeroen Somhorst",
        "email": "j.somhorst@gmail.com"
    },
    "category": ["internet","tools","video"], 
    "tags": {
        "en": ["tvguide","guide","tv"],
        "nl": ["tvgids","gids","tv","programma"]
    },
    "flow": {
        "triggers": [{
            "id": "any_program_start", 
            "title": {
                "en": "A favorite program starts",
                "nl": "Een favoriet programma start"
            },
            "tokens":[
                {
                    "name": "title",
                    "type": "string",
                    "title": {
                        "en": "Titel",
                        "nl": "Titel"
                    },
                    "example": "Pingu"
                },
                {
                    "name": "channel",
                    "type": "string",
                    "title": {
                        "en": "Channel",
                        "nl": "Kanaal"
                    },
                    "example": {
                        "en": "NPO 1",
                        "nl": "NPO 1"
                    }
                }
            ],
            "args":[
                {
                    "name": "offset",
                    "type": "dropdown",
                    "values": [
                        {
                            "id": "0",
                            "label": {
                                "en": "0 minutes",
                                "nl": "0 minutes"
                            }
                        },
                        {
                            "id": "5",
                            "label": {
                                "en": "5 minutes",
                                "nl": "5 minuten"
                            }
                        },
                        {
                            "id": "10",
                            "label": {
                                "en": "10 minutes",
                                "nl": "10 minuten"
                            }
                        },
                        {
                            "id": "15",
                            "label": {
                                "en": "15 minutes",
                                "nl": "15 minuten"
                            }
                        }
                    ]
                }]
        },{
            "id" : "channel_program_starts",
            "title": {
                "en": "A program starts on channel..",
                "nl": "Een programma start op kanaal..."
            },
            "tokens":[
                {
                    "name": "title",
                    "type": "string",
                    "title": {
                        "en": "Titel",
                        "nl": "Titel"
                    },
                    "example": "Pingu"
                },
                {
                    "name": "channel",
                    "type": "string",
                    "title": {
                        "en": "Channel",
                        "nl": "Kanaal"
                    },
                    "example": {
                        "en": "NPO 1",
                        "nl": "NPO 1"
                    }
                }
            ],
            "args":[
                {
                    "name": "channel",
                    "type": "autocomplete"}
                ]
        },{
            "id": "program_start",
            "title": {
                "en": "When a favorite starts",
                "nl": "Als een favoriet start"
            },
            "tokens":[
                {
                    "name": "title",
                    "type": "string",
                    "title": {
                        "en": "Titel",
                        "nl": "Titel"
                    },
                    "example": "Pingu"
                },
                {
                    "name": "channel",
                    "type": "string",
                    "title": {
                        "en": "Channel",
                        "nl": "Kanaal"
                    },
                    "example": {
                        "en": "NPO 1",
                        "nl": "NPO 1"
                    }
                }
            ],
            "args":[{
                    "name": "name",
                    "type": "autocomplete"
                },
                {
                    "name": "offset",
                    "type": "dropdown",
                    "values": [
                        {
                            "id": "0",
                            "label": {
                                "en": "0 minutes",
                                "nl": "0 minutes"
                            }
                        },
                        {
                            "id": "5",
                            "label": {
                                "en": "5 minutes",
                                "nl": "5 minuten"
                            }
                        },
                        {
                            "id": "10",
                            "label": {
                                "en": "10 minutes",
                                "nl": "10 minuten"
                            }
                        },
                        {
                            "id": "15",
                            "label": {
                                "en": "15 minutes",
                                "nl": "15 minuten"
                            }
                        }
                    ]
                }]
        }],
        "conditions": [],
        "actions": []
    }
}